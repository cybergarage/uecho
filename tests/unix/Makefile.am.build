#!/usr/bin/perl
print<<HEADER;
############################################################
#
# uEcho for C
#
# Copyright (C) The uecho Authors 2015
#
############################################################

noinst_PROGRAMS = uechotest

AM_CPPFLAGS = -I\$(top_srcdir)/include -I../

HEADER

print<<NOINST_HEADERS;
noinst_HEADERS = \\
NOINST_HEADERS

my @find_files = `find ../ -name *.h`;
my @include_files;
foreach $file (@find_files) {
	$file =~ s/\n//;
	$file = "\t" . $file;
	push @include_files, $file;
}
print join(" \\\n", @include_files) . "\n";

print<<SOURCES;

uechotest_SOURCES = \\
SOURCES

my @find_files = `find ../ -name *.cpp -or -name *.c`;
my @source_files;
foreach $file (@find_files) {
	$file =~ s/\n//;
	$file = "\t" . $file;
	push @source_files, $file;
}
print join(" \\\n", @source_files) . "\n";

print<<FOTTER;
#if HAVE_LIBTOOL
#uechotest_LDADD = ../../lib/unix/libclinkc.la -lcppunit
#else
uechotest_LDADD = ../../lib/unix/libclinkc.a  -lcppunit
#endif
FOTTER

